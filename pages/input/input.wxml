<!--index.wxml-->
<view class="container">
  <view class="page-body">
    <view class="section">
      <textarea value="{{s}}" bindinput="bindFormSubmit" maxlength = "-1" bindconfirm="confirmDeal" placeholder="请输入要筛选的文本" />
      <button class='btn' type="default" bindtap="deal_article"> 处理 </button>
    </view>

    <view class='imagesize' bindtap="addpicture">
      <image class="addpictures" mode="scaleToFill" src="/images/icon_input_camera.png"></image>
    </view>

    <modal title="提示" cancel-text="稍后再背" confirm-text="开始背诵"
          hidden="{{mHidden}}" bindconfirm="modalconfirm" bindcancel="modalcancel">
        筛选完毕，是否开始背诵？
    </modal>

    <modal title="提示" no-cancel = "true" confirm-text="知道了"
          hidden="{{nHidden}}" bindconfirm="modalconfirm1">
        您可在“我/历史记录“查看本次筛选结果并继续背诵。
    </modal>

  </view>
</view>