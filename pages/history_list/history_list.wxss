page {
  height: 100%;
  padding: 0rpx;
  background-color: #f7f7f7;
}

.page__head {
  z-index: 100;
  position: fixed;
  top: 0;
  width: 750rpx;
}

.page__body {
  z-index: -1;
  margin-top: 100rpx;
}

.cell-info {
  position: relative;
  height: 40rpx;
  border-radius: 15rpx 15rpx 0rpx 0rpx;
  background-color: rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.82);
  font-size: 20rpx;
  font-style: italic;
  text-align: left;
  font-family: PingFang SC;
  padding-left: 50rpx;
}

.blueblock {
  position: absolute;
  height: 32rpx;
  border-radius: 15rpx 0rpx 0rpx 0rpx;
  border: 2px solid rgb(255, 255, 255);
  background-color: rgba(10, 211, 238, 0.432);
  left: 0rpx;
  top: 0rpx;
  width: 0rpx;
}

.orangeblock {
  position: absolute;
  height: 32rpx;
  border: 2px solid rgb(255, 255, 255);
  background-color: rgba(255, 166, 0, 0.432);
  top: 0rpx;
  width: 0rpx;
}

.greenblock {
  position: absolute;
  height: 32rpx;
  border-radius: 0rpx 15rpx 0rpx 0rpx;
  border: 2px solid rgb(255, 255, 255);
  background-color: rgba(0, 255, 42, 0.432);
  top: 0rpx;
  right: 0rpx;
  width: 0rpx;
}

.headtext {
  font-weight: 700;
  font-size: 45rpx;
}

.headdivpartition {
  height: 20rpx;
}

.divdatepartition {
  height: 10rpx;
}

.divLine {
  background: rgb(187, 187, 187);
  width: 100%;
  height: 2rpx;
}

.iconstatus {
  position: absolute;
  right: 40rpx;
  top: 20rpx;
}

.plus {
  position: absolute;
  color: rgb(42, 211, 0);
  font-weight: 700;
  font-size: 40rpx;
  right: 40rpx;
  bottom: 20rpx;
}

.text0 {
  font-weight: 500;
  font-size: 24rpx;
  font-style: italic;
}

.history-slidecell {
  margin: 8rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 24rpx;
  line-height: 1.4;
  font-size: 17rpx;
  color: rgba(0, 0, 0, 0.9);
}
