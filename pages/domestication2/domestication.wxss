.page {
  display: flex;
  flex-flow: column;
}

.page-title {
  margin: 50rpx;
  color: black;
  font-size: 56rpx;
  text-align: left;
  font-family: PingFangSC-bold;
}

.page-body {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-evenly;
  align-items: center;
}

.tag-container {
  width: 280rpx;
  height: 120rpx;
  margin: 20rpx;
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0rpx 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  font-family: -apple-system;
  border: 2rpx solid rgba(255, 255, 255, 0);
}

.tag-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
}

.tag-text {
  font-size: 36rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
