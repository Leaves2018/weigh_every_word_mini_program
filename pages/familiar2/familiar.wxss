page {
  background-color: #ededed;
}

.page__head {
  z-index: 100;
  position: fixed;
  top: 0;
  width: 750rpx;
}

.page__body {
  z-index: -1;
  margin-top: 100rpx;
}

.initial {
  text-align: center;
  font-size: 24pt;
}

.words-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: 50px;
  justify-content: center; /** 水平居中 */
}

.item {
  /* font-size: 4em; */
  border: 1px solid #e5e4e9;
  display: flex;
  align-items: center;
  justify-content: center;
}
