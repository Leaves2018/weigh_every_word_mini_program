<!--pages/history_detail2/history_detail.wxml-->
<view class="page">
  <view class="retext">
    <text class="headtext">{{his_headline}}</text>
    <image class="modify" bindtap="redirectToModify" src="/images/edit.png"></image>
    <view class="retext0">
      <view class="greenbackground" bindtap="showallvowords">
        <image class="addpictures0" src="/images/eye.png"></image>
        <text space="ensp" class="text0"> 生词 {{numberOfVo}}</text>
      </view>
      <view class="partition"></view>
      <view class="textbackground" bindtap="showallunwords">
        <image class="addpictures1" src="/images/view_all.png"></image>
        <text space="ensp" class="text0"> 未处理 {{numberOfUn}}</text>
      </view>
    </view>
    <scroll-view class="body-view" scroll-y="true" style="height: {{passage_height}};">
      <tappable-passage passage="{{passage}}" highlight="{{highlight}}" thisword="{{thisword}}" bindtapword="tapWord" />
    </scroll-view>
  </view>
  <!-- <word-card-dialog show="{{dialogShow}}" mask-closable="{{false}}" bindbuttontap="dealRememberAndForget" word="{{dialogContent}}" detail="{{wordDetail}}"/> -->
  <word-card-halfScreenDialog show="{{dialogShow}}" mask-closable="{{true}}" bindbuttontap="dealRememberAndForget" word="{{dialogContent}}" detail="{{wordDetail}}" />
  <!-- <recite show="{{reciteShow}}" history="{{reciteHistory}}" bindbuttontap="dealRememberAndForget"/> -->
  <word-card-set show="{{reciteShow}}" history="{{reciteHistory}}" bindbuttontap="dealRememberAndForget" />
</view>