/* pages/history_detail2/history_detail.wxss */

page {
  height: 100%;
  padding: 0rpx;
}

.modify {
  position: fixed;
  width: 50rpx;
  height: 50rpx;
  top: 5rpx;
  right: 10rpx;
}

.retext {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.headtext {
  font-weight: 700;
  font-size: 50rpx;
}

.untext {
  font-weight: 700;
  color: rgb(0, 0, 0);
  border-radius: 10%;
  background-color: rgb(255, 174, 52);
}

.votext {
  font-weight: 700;
  color: rgb(255, 255, 255);
  border-radius: 10%;
  background-color: rgb(42, 211, 0);
}

.body-view {
  border-radius: 2%;
  background-color: rgb(0, 0, 0, 0.03);
  margin-bottom: 100rpx;
}

.button_edit {
  position: fixed;
  bottom: 0rpx;
  background-color: white;
  width: 100%;
  height: 100rpx;
}

.wordsbtn {
  position: fixed;
  bottom: 15rpx;
  right: 50rpx;
  width: 350rpx;
  height: 70rpx;
  line-height: 26rpx;
  border-radius: 15rpx;
  background-color: rgba(2, 194, 97, 1);
  color: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(187, 187, 187, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.returnbtn {
  position: fixed;
  bottom: 15rpx;
  left: 50rpx;
  width: 200rpx;
  height: 70rpx;
  line-height: 26rpx;
  border-radius: 15rpx;
  background-color: rgba(0, 0, 0, 0.74);
  color: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(187, 187, 187, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.text0 {
  font-weight: 700;
  font-size: 35rpx;
}

.showallwords {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 20rpx;
  right: 20rpx;
}
