/* pages/history_detail2/history_detail.wxss */
page {
  height:100%;
  padding: 0rpx;
}

.modify {
  position: fixed;
  width: 40px;
  height: 40px;
  top: 10px;
  right: 10px;
}

.headtext{
  font-weight: 700;
  font-size: 30px;
}

.untext {
  font-weight: 700;
  color: rgb(255, 255, 255);
  border-radius: 10%;
  background-color: rgb(252, 164, 0);
}
.votext {
  font-weight: 700;
  color:rgb(255, 255, 255);
  border-radius: 10%;
  background-color:  rgb(42, 211, 0);
}

.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
}

.title_edit{
  display: flex;
  flex-direction: row;
}
.unknown_edit{
  display: flex;
  flex-direction: row;
}
.vocabulary_edit{
  display: flex;
  flex-direction: row;
}

#wordscontainer{
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: 50px;
  justify-content: center; /** 水平居中 */

}

.item {
  /* font-size: 4em; */
  border: 1px solid #e5e4e9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wordsbtn {
  background-color: rgb(0, 221, 0);
  color: white;
  top: 30rpx;
}
