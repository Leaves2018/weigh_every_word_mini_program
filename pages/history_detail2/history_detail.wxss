/* pages/history_detail2/history_detail.wxss */

page {
  height: 100%;
  padding: 0rpx;
}

.modify {
  position: fixed;
  width: 30px;
  height: 30px;
  top: 10px;
  right: 10px;
}

.retext {
  margin-left: 50rpx;
}

.headtext {
  font-weight: 700;
  font-size: 30px;
}

.untext {
  font-weight: 700;
  color: rgb(255, 255, 255);
  border-radius: 10%;
  background-color: rgb(252, 164, 0);
}

.votext {
  font-weight: 700;
  color: rgb(255, 255, 255);
  border-radius: 10%;
  background-color: rgb(42, 211, 0);
}

.divLine {
  background: #e0e3da;
  width: 100%;
  height: 5rpx;
}

#wordscontainer {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: 50px;
  justify-content: center; /** 水平居中 */
}

.item {
  /* font-size: 4em; */
  border: 1px solid #e5e4e9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.button_edit {
  position: fixed;
  bottom: 0rpx;
  background-color: white;
  width: 100%;
  height: 100rpx;
}

.wordsbtn {
  position: fixed;
  bottom: 15rpx;
  right: 50rpx;
}

.returnbtn {
  position: fixed;
  bottom: 15rpx;
  left: 50rpx;
}
