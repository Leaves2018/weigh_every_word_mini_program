/* pages/draft/draft.wxss */

.body {
  display: flex;
  justify-content: center;
}

.draftbackground {
  position: fixed;
  top: 50rpx;
  width: 90%;
  height: 60%;
  line-height: 20rpx;
  border-radius: 5rpx;
  background-color: rgba(0, 0, 0, 0.19);
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0);
}

.words-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: 250rpx;
  justify-content: center; /** 水平居中 */
}

.item {
  /* font-size: 4em; */
  border: 1rpx solid #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
}
.textbackground {
  left: 100rpx;
  bottom: 140rpx;
  width: 160rpx;
  height: 160rpx;
  line-height: 20rpx;
  border-radius: 15rpx;
  background-color: rgb(37, 224, 248);
  text-align: center;
  border: 1rpx solid rgba(187, 187, 187, 1);
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.clickbackground {
  left: 285rpx;
  bottom: 140rpx;
  width: 180rpx;
  height: 160rpx;
  line-height: 20rpx;
  border-radius: 15rpx;
  background-color: rgb(255, 208, 0);
  text-align: center;
  border: 1rpx solid rgba(187, 187, 187, 1);
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.greenbackground {
  right: 100rpx;
  bottom: 140rpx;
  width: 160rpx;
  height: 160rpx;
  line-height: 20rpx;
  border-radius: 15rpx;
  background-color: rgba(2, 194, 97, 1);
  text-align: center;
  border: 1rpx solid rgba(187, 187, 187, 1);
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.addpictures {
  width: 80rpx;
  height: 80rpx;
}

.button_edit {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 150rpx;
}

.wordsbtn {
  position: fixed;
  bottom: 15rpx;
  left: 200rpx;
  width: 400rpx;
  height: 90rpx;
  line-height: 26rpx;
  border-radius: 15rpx;
  background-color: rgba(2, 194, 97, 1);
  color: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(187, 187, 187, 1);
  display: flex;
  flex-direction: column;
