<!--pages/draft/draft.wxml-->
<view>
  <view class="body">
    <view class="draftbackground">
      <view class="words-container">
        <view class="item" data-position="{{index}}" wx:for="{{showinformation}}" wx:key="*this" bindlongpress="longdelete" bindtap="showpassagefragment">{{index+1}}</view>
      </view>
    </view>
  </view>
  <view class="greenbackground" bindtap="addpicture">
    <image class="addpictures" src="/images/camera.png"></image>
    <text space="ensp"  class="text"> 扫描文稿</text>
  </view>
  <view class="textbackground" bindtap="addtext">
    <image class="addpictures" src="/images/input.png"></image>
    <text space="ensp"  class="text"> 输入文本</text>
  </view>
  <view class='wordsbtn' bindtap="deal_passage">
    <text class="text">加入到档案</text>
  </view>
</view>