/* pages/input2/input.wxss */

page {
  height: 100%;
}

.greet {
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-size: 70rpx;
  font-weight: 700;
}

.whitespace {
  height: 30rpx;
}

.white {
  height: 400rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.words-container {
  display: grid;
  grid-template-columns: repeat(20, 1fr);
  grid-auto-rows: 35rpx;
  justify-content: center; /** 水平居中 */
}

.item {
  /* font-size: 4em; */
  border: 2rpx solid #fbfdfb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.craftbackground {
  bottom: 100rpx;
  width: 400rpx;
  height: 100rpx;
  line-height: 20rpx;
  border-radius: 15rpx;
  background-color: rgb(188, 189, 188);
  text-align: center;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0, 0, 0, 0.4);
  border: 1rpx solid rgba(187, 187, 187, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column;
}

.greenbackground {
  bottom: 200rpx;
  width: 400rpx;
  height: 400rpx;
  line-height: 20rpx;
  border-radius: 15rpx;
  background-color: rgba(2, 194, 97, 1);
  text-align: center;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0, 0, 0, 0.4);
  border: 1rpx solid rgba(187, 187, 187, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column;
}

.addpictures {
  width: 200rpx;
  height: 200rpx;
}

.remindtext {
  width: 200rpx;
  height: 56rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 40rpx;
  text-align: center;
  font-family: PingFangSC-regular;
}
