/* pages/recite3/recite.wxss */

.background-mask {
  position: fixed;
  z-index: 3000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.container {
  position: fixed;
  z-index: 5000;
  top: 16px;
  bottom: 16px;
  left: 16px;
  right: 16px;
  text-align: center;
  font-size: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}

.word-card-container {
  margin-bottom: 25px;
  background-color: white;
  border-width: 1px;
  border-style: solid;
  border-radius: 15px;
}