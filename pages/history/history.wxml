<view class="page">
  <view class='title'>
    <input name="title" placeholder-class="placeholder" placeholder="历史记录(左滑可查看文章、标记、删除)" />
  </view>

  <view class="divLine"></view>

  <block wx:for="{{items}}" wx:key="*this">
    <view class="weui-slidecells">
      <mp-slideview buttons="{{slideButtons}}" icon="{{true}}" bindbuttontap="slideButtonTap">
        <view class="weui-slidecell">
          {{item.name}}
        </view>
      </mp-slideview>
    </view>
  </block>

</view>