<view class="page">
  <mp-searchbar bindselectresult="selectResult" search="{{search}}"></mp-searchbar>
  <block wx:for="{{his_list}}" wx:key="*this">
  <view class="history-slidecells">
    <mp-slideview data-position = "{{index}}" buttons="{{slideButtons}}" icon="{{true}}" bindtap="buttonnavigate" bindbuttontap="slideButtonTap">
      <view class="history-slidecell" style="color:{{fontcolor}};">
        {{index + 1}}. {{item}}
        <icon type="{{iconType[index]}}" size="40"/>
      </view>
    </mp-slideview>
  </view>
  </block>
  <modal title="提示" cancel-text="取消" confirm-text="确定"
          hidden="{{mHidden}}" bindconfirm="modalconfirm" bindcancel="modalcancel">
        你确定要删除此历史记录吗？（已确认的生词不会被删除）
  </modal>
</view>