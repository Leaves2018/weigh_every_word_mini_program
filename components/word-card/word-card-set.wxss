/* components/word-card/word-card-set.wxss */

.weui-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.weui-mask_transparent {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.container {
  position: fixed;
  z-index: 5000;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  text-align: center;
  font-size: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}

.weui-mask.weui-mask_hidden {
  opacity: 0;
  transform: scale3d(1, 1, 0);
}

.weui-mask {
  opacity: 1;
  transform: scale3d(1, 1, 1);
  transition: all 0.3s ease-in;
}

.weui-dialog.weui-dialog_hidden {
  opacity: 0;
  transform: scale3d(1, 1, 0);
}

.weui-dialog {
  opacity: 1;
  -webkit-transform: scale3d(1, 1, 1);
  transform: scale3d(1, 1, 1);
  transition: all 0.3s ease-in;
}

.word-card-set-container {
  width: 750rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.word-card-container {
  flex-shrink: 0;
  background-color: white;
  position: relative;
  display: flex;
  flex-flow: column;
  border: 8rpx solid;
  border-radius: 30rpx;
  margin: 0rpx 50rpx;
}

.word-card-head {
  /* border-radius: 30rpx 30rpx 0rpx 0rpx; */
  overflow: hidden;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
}

.word-card-head>.word-card-head-image {
  width: 30rpx;
  height: 30rpx;
  /* margin: 25rpx; */
}

.word-card-head>.word-card-head-name {
  color: rgba(250, 250, 250, 1);
  font-size: 24rpx;
  font-style: italic;
  text-align: center;
  font-family: -apple-system;
}

.word-card-scroll-view {
  border: 0rpx solid;
  border-radius: 30rpx;
}

.bottom {
  position: absolute;
  bottom: 0rpx;
  /* background-color: white; */
  align-self: flex-end;
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: space-evenly;
  align-items: center;
}

.bottom>.btn {
  width: 33%;
  height: 75%;
  border-radius: 15rpx;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn.forget {
  background: #02C261 100%;
  color: white;
}

.btn.remember {
  background: #3E79E1 88%;
  color: white;
}
